###############################################################################
#PSP_TEST_HOME = $(APP_HOME)
###############################################################################
#  USERDEFINES should be included first for the user environment variables.
###############################################################################
-include $(PSP_TEST_HOME)/USERDEFINES

###############################################################################
#  Define the different executables
###############################################################################
RM=rm
MV=mv
CP=cp

###############################################################################
#KERNEL INCLUDE DIRECTORY (Not required, VATF defines it)
###############################################################################
#KERNEL_INC =


###############################################################################
# Configuration folder path
###############################################################################
CONFIG_INC = $(PSP_TEST_HOME)/config

###############################################################################
# User Level utils Folder path
###############################################################################
USER_UTIL_INC = $(PSP_TEST_HOME)/utils/userlevel

###############################################################################
# Kernel Level utils Folder path
###############################################################################
KERN_UTIL_INC = $(PSP_TEST_HOME)/utils/kernellevel

###############################################################################
# INSTALL TARGET DIR NAME
###############################################################################
INSTALL_TARGET_DIR = pspTestTarget

###############################################################################
# Executable Name
###############################################################################
PROG = pspTest

###############################################################################
# Binary Folder path
###############################################################################
BIN = $(PSP_TEST_HOME)/bin

###############################################################################
# YUV files path
###############################################################################
PATH_FOR_YUV = $(PSP_TEST_HOME)/data/sampleYUVFiles

###############################################################################
# Check if ALSA is Enabled, if yes include the libasound.so
###############################################################################
ifeq ($(USE_TP_ALSA),1)
LDFLAGS += $(ALSA_LIBPATH)/libasound.so
endif

###############################################################################
# Check if the products selected is 1.1/1.3, if yes include libm in LDFLAGS.
# This is required for math library. 
###############################################################################

ifeq ($(PRODUCT),LSP 1.1)
LDFLAGS += -lm
endif

ifeq ($(PRODUCT),LSP 1.3)
LDFLAGS += -lm
endif

###############################################################################
# Flags to the complier. CFLAGS are currently unused in all makefiles
###############################################################################
CFLAGS = -I $(KERNEL_INC) -I $(CONFIG_INC) -I $(USER_UTIL_INC) -I $(KERN_UTIL_INC)

###############################################################################
# Ensure that -I $(ALSA_INCPATH) comes after -I $(KERNEL_INC) in CFLAGS
###############################################################################

ifeq ($(USE_TP_ALSA),1)
CFLAGS += -I $(ALSA_INCPATH)
endif

###############################################################################
# Define to reveal the product and architecture to the source code.
###############################################################################
ifeq ($(PRODUCT),LSP 2.0)
CFLAGS += -D __LINUX_ARM_ARCH__=5 -D LSP_2_0_PRODUCT
endif

ifeq ($(PRODUCT),LSP 1.3)
CFLAGS += -D LSP_1_3_PRODUCT
endif

ifeq ($(PRODUCT),LSP 1.2)
CFLAGS += -D LSP_1_2_PRODUCT
endif
ifeq ($(PRODUCT),LSP 1.1)
CFLAGS += -D LSP_1_1_PRODUCT
endif

CFLAGS += -Wall -fno-common

###############################################################################
# Debug Flags to the complier. DEBUG is currently used in the makefiles
###############################################################################
ifeq ($(DEBUG_BUILD),1)
DEBUG = -D CPULOAD_DEBUG 
else
DEBUG =
endif
