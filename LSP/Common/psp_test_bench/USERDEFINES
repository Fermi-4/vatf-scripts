#PSP_TEST_HOME = $(APP_HOME)
###############################################################################
#  CURRENTCFG.MK should be included first to take care of the PRODUCT
###############################################################################
-include $(PSP_TEST_HOME)/config/CURRENTCFG.MK

###############################################################################
# Executable install paths.
###############################################################################
INSTALL_DIR =$(PSP_TEST_HOME)

###############################################################################
#  Change this to the kernel sources directory of the LSP release.
###############################################################################
KERNEL_DIR :=$(patsubst -I,, $(patsubst %/include,%,$(KERNEL_INC)) )

###############################################################################
# C Compiler to be used
###############################################################################
CC=arm_v5t_le-gcc

###############################################################################
# CROSS_COMPILE option to be used
###############################################################################
CROSS_COMPILE_OPTION =arm_v5t_le-

###############################################################################
#  If you are using ALSA change following ALSA related environment variables
###############################################################################
ifeq ($(USE_TP_ALSA),1)

###############################################################################
#  Change ALSA_LIBPATH to the path where the libasound library is installed
###############################################################################
ALSA_LIBPATH = /opt/mv_pro_5.0/montavista/pro/devkit/arm/v5t_le/target/usr/lib

###############################################################################
#  Change ALSA_INCPATH to the path where alsa include folder is present
###############################################################################
ALSA_INCPATH = /opt/mv_pro_5.0/montavista/pro/devkit/arm/v5t_le/target/usr/include

endif




