DIRS :=

ifeq ($(USE_TP_FS),1)
DIRS +=  fs
endif
ifeq ($(USE_TP_ALSA),1)
DIRS +=  audio
endif
ifeq ($(USE_TP_OSS),1)
DIRS += audio
endif
ifeq ($(USE_TP_V4L2),1)
DIRS +=  video
endif
ifeq ($(USE_TP_FBDEV),1)
DIRS += video
endif
ifeq ($(USE_TP_USBVIDEO),1)
DIRS += video
endif
ifeq ($(USE_TP_VDCE),1)
DIRS +=  vdce
endif
ifeq ($(USE_TP_I2C),1)
DIRS +=  i2c 
endif
ifeq ($(USE_TP_SPI),1)
DIRS +=  spi
endif
 
